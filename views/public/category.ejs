<%- include('../partials/header') %>

<section>
  <h1 class="text-3xl font-semibold"><%= category.name %></h1>
  <div class="mt-6 grid gap-6 md:grid-cols-2">
    <% posts.forEach(function(post) { %>
      <article class="rounded-2xl border border-slate-800 bg-slate-900/60 p-5">
        <p class="text-xs text-slate-400"><%= formatDate(post.publishedAt || post.createdAt) %> ・ <%= estimateReadTime(post.content) %></p>
        <h3 class="mt-2 text-lg font-semibold"><a href="/blog/<%= post.slug %>"><%= post.title %></a></h3>
        <p class="mt-2 text-sm text-slate-300"><%= post.excerpt %></p>
      </article>
    <% }) %>
    <% if (!posts.length) { %>
      <p class="text-sm text-slate-400">No posts yet.</p>
    <% } %>
  </div>
</section>

<%- include('../partials/footer') %>

