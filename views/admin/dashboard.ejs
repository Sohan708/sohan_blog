<%- include('../partials/header') %>

<div class="admin-layout">
  <%- include('../partials/admin-nav') %>
  <section class="admin-panel">
    <div class="section-head">
      <div>
        <p class="eyebrow">Overview</p>
        <h1 class="section-title">Dashboard</h1>
      </div>
    </div>
    <div class="stat-grid">
      <div class="card">
        <p class="meta">Total posts</p>
        <p class="stat"><%= stats.totalPosts %></p>
      </div>
      <div class="card">
        <p class="meta">Published</p>
        <p class="stat"><%= stats.published %></p>
      </div>
      <div class="card">
        <p class="meta">Drafts</p>
        <p class="stat"><%= stats.drafts %></p>
      </div>
      <div class="card">
        <p class="meta">Views</p>
        <p class="stat"><%= stats.views %></p>
      </div>
    </div>
  </section>
</div>

<%- include('../partials/footer') %>
