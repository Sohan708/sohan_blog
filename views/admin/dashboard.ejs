<%- include('../partials/header') %>

<div class="grid gap-6 lg:grid-cols-[280px_1fr]">
  <%- include('../partials/admin-nav') %>
  <section>
    <h1 class="text-2xl font-semibold">Dashboard</h1>
    <div class="mt-6 grid gap-4 md:grid-cols-2 lg:grid-cols-4">
      <div class="rounded-2xl border border-slate-800 bg-slate-900/70 p-4">
        <p class="text-xs text-slate-400">Total posts</p>
        <p class="mt-2 text-2xl font-semibold"><%= stats.totalPosts %></p>
      </div>
      <div class="rounded-2xl border border-slate-800 bg-slate-900/70 p-4">
        <p class="text-xs text-slate-400">Published</p>
        <p class="mt-2 text-2xl font-semibold"><%= stats.published %></p>
      </div>
      <div class="rounded-2xl border border-slate-800 bg-slate-900/70 p-4">
        <p class="text-xs text-slate-400">Drafts</p>
        <p class="mt-2 text-2xl font-semibold"><%= stats.drafts %></p>
      </div>
      <div class="rounded-2xl border border-slate-800 bg-slate-900/70 p-4">
        <p class="text-xs text-slate-400">Views</p>
        <p class="mt-2 text-2xl font-semibold"><%= stats.views %></p>
      </div>
    </div>
  </section>
</div>

<%- include('../partials/footer') %>

