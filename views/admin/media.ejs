<%- include('../partials/header') %>

<div class="admin-layout">
  <%- include('../partials/admin-nav') %>
  <section class="admin-panel">
    <div class="section-head">
      <div>
        <p class="eyebrow">Library</p>
        <h1 class="section-title">Media</h1>
      </div>
    </div>
    <form class="form-row" method="post" enctype="multipart/form-data" action="/admin/media">
      <input class="file" type="file" name="media" required />
      <button class="btn btn-primary" type="submit">Upload</button>
    </form>
    <div class="media-grid">
      <% files.forEach(function(file) { %>
        <div class="card-min">
          <img class="media-thumb" src="<%= file %>" alt="Media" />
          <p class="meta break"><%= file %></p>
        </div>
      <% }) %>
      <% if (!files.length) { %>
        <p class="muted">No media yet.</p>
      <% } %>
    </div>
  </section>
</div>

<%- include('../partials/footer') %>
