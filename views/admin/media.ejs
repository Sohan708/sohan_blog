<%- include('../partials/header') %>

<div class="grid gap-6 lg:grid-cols-[280px_1fr]">
  <%- include('../partials/admin-nav') %>
  <section>
    <h1 class="text-2xl font-semibold">Media</h1>
    <form class="mt-4 flex items-center gap-3" method="post" enctype="multipart/form-data" action="/admin/media">
      <input class="text-sm" type="file" name="media" required />
      <button class="rounded-xl bg-white px-4 py-2 text-sm font-semibold text-slate-900" type="submit">Upload</button>
    </form>
    <div class="mt-6 grid gap-3 md:grid-cols-3">
      <% files.forEach(function(file) { %>
        <div class="rounded-xl border border-slate-800 bg-slate-900/70 p-3">
          <img class="h-32 w-full rounded-lg object-cover" src="/uploads/<%= file %>" alt="<%= file %>" />
          <p class="mt-2 text-xs text-slate-400 break-all"><%= file %></p>
        </div>
      <% }) %>
      <% if (!files.length) { %>
        <p class="text-sm text-slate-400">No media yet.</p>
      <% } %>
    </div>
  </section>
</div>

<%- include('../partials/footer') %>

