<%- include('../partials/header') %>

<div class="admin-layout">
  <%- include('../partials/admin-nav') %>
  <section class="admin-panel">
    <div class="section-head">
      <div>
        <p class="eyebrow">Taxonomy</p>
        <h1 class="section-title">Categories</h1>
      </div>
    </div>
    <% if (errors.length) { %>
      <div class="alert">
        <ul>
          <% errors.forEach(function(error) { %>
            <li><%= error %></li>
          <% }) %>
        </ul>
      </div>
    <% } %>
    <form class="form-row" method="post" action="/admin/categories">
      <input class="field" type="text" name="name" placeholder="New category" required />
      <button class="btn btn-primary" type="submit">Add</button>
    </form>
    <div class="stack-list">
      <% categories.forEach(function(category) { %>
        <div class="card list-row">
          <div>
            <p class="title-md"><%= category.name %></p>
            <p class="meta"><%= category.slug %></p>
          </div>
          <form method="post" action="/admin/categories/<%= category._id %>/delete">
            <button class="btn btn-outline danger" type="submit">Delete</button>
          </form>
        </div>
      <% }) %>
      <% if (!categories.length) { %>
        <p class="muted">No categories yet.</p>
      <% } %>
    </div>
  </section>
</div>

<%- include('../partials/footer') %>
