<%- include('../partials/header') %>

<div class="admin-layout">
  <%- include('../partials/admin-nav') %>
  <section class="admin-panel">
    <div class="section-head">
      <div>
        <p class="eyebrow">Content</p>
        <h1 class="section-title">Posts</h1>
      </div>
      <a class="btn btn-primary" href="/admin/posts/new">New post</a>
    </div>
    <div class="stack-list">
      <% posts.forEach(function(post) { %>
        <div class="card list-row">
          <div class="list-meta">
            <% if (post.coverImagePath) { %>
              <img class="list-thumb" src="<%= post.coverImagePath %>" alt="<%= post.title %>" />
            <% } %>
            <p class="meta"><%= formatDate(post.createdAt) %> ・ <%= post.status %></p>
            <h3 class="title-md"><%= post.title %></h3>
            <p class="muted">Category: <%= post.category?.name || 'General' %></p>
          </div>
          <div class="button-row">
            <a class="btn btn-outline" href="/admin/posts/<%= post._id %>/edit">Edit</a>
            <form method="post" action="/admin/posts/<%= post._id %>/delete">
              <button class="btn btn-outline danger" type="submit">Delete</button>
            </form>
          </div>
        </div>
      <% }) %>
      <% if (!posts.length) { %>
        <p class="muted">No posts yet.</p>
      <% } %>
    </div>
  </section>
</div>

<%- include('../partials/footer') %>

